@model WebShop.Models.Product
@{
    ViewBag.Title = "Shop_Details";
}
<div class="body-content">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <ol class="breadcrumb">
                    <li class="active">
                        CATEGORY
                    </li>
                </ol>
                <div class="well">
                    @Html.Action("_SubCategory")
                </div>
                <ol class="breadcrumb">
                    <li class="active">
                        COLOR
                    </li>
                </ol>
                <div class="well">

                </div>
                <ol class="breadcrumb">
                    <li class="active">
                        SIZE
                    </li>
                </ol>
                <div class="well">

                </div>
                <ol class="breadcrumb">
                    <li class="active">
                        PRICE
                    </li>
                </ol>
                <div class="well">

                </div>
                <ol class="breadcrumb">
                    <li class="active">
                        BRANDS
                    </li>
                </ol>
                <div class="well">
                    @Html.Action("_Brand")
                </div>
            </div>
            <div class="col-md-9">
                <div class="row">
                    <ol class="breadcrumb">
                        <li class="active">
                            @Model.Title
                        </li>
                    </ol>
                </div>
                <div class="row">
                    <!-- Start Shop 1-6 v1 -->
                    <section id="shop-1-6" class="content-block shop-1-6">
                        <div class="col-md-6">
                            <div class="ribbon exclusive"></div><!-- Ribbon -->
                            @Html.Action("_Images")
                        </div>
                        <div class="col-md-6">
                            <div class="product-desc">
                                <div class="editContent" data-selector="Basic">
                                    <h1 data-selector="h1">@Model.Title</h1>
                                </div>
                                <div class="editContent" data-selector="Basic">
                                    <h3 data-selector="h2">DKK @Model.Price</h3>
                                </div>
                                <div class="product-rating">
                                    <span>Avg customer rating:</span>
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        if (i + 1 <= ViewBag.totalRating)
                                        {
                                            <div class="star small"></div>
                                        }
                                        else
                                        {
                                            <div class="star small black"></div>
                                        }
                                    }

                                    @*@ViewBag.totalRating*@
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        if (ViewBag.HasRated != null)
                                        {
                                            bool hasrated = ViewBag.HasRated;
                                            if (hasrated)
                                            {
                                                <p>Du har rated</p>
                                            }
                                            else
                                            {
                                                using (Html.BeginForm("AddRating", "Home", FormMethod.Post))
                                                {
                                                    @Html.Hidden("productId", Model.ProductId)
                                                    <div class="rating">
                                                        <button class="he" type="submit" name="RatingButton" value="5">☆</button>
                                                        <button class="he" type="submit" name="RatingButton" value="4">☆</button>
                                                        <button class="he" type="submit" name="RatingButton" value="3">☆</button>
                                                        <button class="he" type="submit" name="RatingButton" value="2">☆</button>
                                                        <button class="he" type="submit" name="RatingButton" value="1">☆</button>
                                                    </div>
                                                }
                                            }

                                        }
                                    }
                                    else
                                    {
                                            <h4>login to rate</h4>
                                    }
                                </div>
                                <form class="form-inline">
                                    <div class="form-group">
                                        <label class="sr-only" for="exampleInputAmount">Quantity</label>
                                        <div class="input-group">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button" data-selector="Basic">-</button>
                                            </span>
                                            <input type="text" class="form-control" id="quantity" placeholder="1">
                                            <span class="input-group-btn">
                                                <button class="btn btn-default" type="button" data-selector="Basic">+</button>
                                            </span>
                                        </div>
                                    </div>
                                    @Html.ActionLink("ADD TO CART", "AddToCart", "Home", new { @id = Model.ProductId }, null)
                                </form>
                                <div class="editContent" data-selector="Basic">
                                    @*<p data-selector="p">@Model.Description</p>*@
                                    @*<ul class="fa-ul">
                                            <li><i class="fa-li fa fa-chevron-right"></i>Dynamic Color Options</li>
                                            <li><i class="fa-li fa fa-chevron-right"></i>Lots of Size Options</li>
                                            <li><i class="fa-li fa fa-chevron-right"></i>30-Day Return Policy</li>
                                        </ul>*@
                                    <hr>
                                    <ul class="fa-ul">
                                        <li><i class="fa-li fa fa-search"></i>SKU: 53016341</li>
                                        <li><i class="fa-li fa fa-th-list"></i>Category: <a href="@Url.Action("Shop", "Home", new { id = Model.SubCategoryId })">@Model.SubCategory.Name</a></li>
                                    </ul>
                                </div><!-- /.product-desc -->
                            </div>
                        </div><!-- /.row -->
